    {
        itemText:"Preturi",
        itemLink:"#"
    },
    {
        itemText:"FAQ",
        itemLink:"#"
    },
    {
        itemText:"Contact",
        itemLink:"#"
    }
]

const footerCompany = [
    {
        itemText:"Acasa",
        itemLink:"/#"
    },
    {
        itemText:"Blog",
        itemLink:"#"
    },
    {
        itemText:"Despre",
        itemLink:"/despre"
