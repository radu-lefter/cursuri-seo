---
import Paragraph from "../shared/Paragraph.astro";

interface Props {
  url: string;
  imageUrl: string;
  title: string;
  description: string;
}

const { url, imageUrl, title, description } = Astro.props;
---

<div
  class="flex flex-row w-2/3 p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden"
>

    <img  class="h-full w-1/3 rounded-t-lg md:h-auto md:!rounded-none md:!rounded-l-lg" src={imageUrl} />
    <div class="flex flex-col justify-start p-6">
        <div class="text-lg md:text-xl font-semibold text-heading-2 pl-2">
          <a href={url}>{title}</a>
        </div>
      <Paragraph>
        {description.split(" ").slice(0, 40).join(" ")}...
      </Paragraph>
    </div>

</div>
